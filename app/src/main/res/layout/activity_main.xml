<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#A9A9A9"
    tools:context=".MainActivity">


<RelativeLayout
android:id="@+id/quoteBox"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_margin="16dp"
android:background="#D3D3D3"
    android:padding="16dp"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="60dp">

<TextView
android:id="@+id/tvQuote"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Quote of the Day"
android:textSize="24sp"
android:textColor="#000000"
    android:layout_centerHorizontal="true"
    android:layout_alignParentStart="true"
    android:layout_marginEnd="40dp" />

<ImageView
android:id="@+id/ivFavorite"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_alignParentEnd="true"
android:layout_centerVertical="true"
android:src="@drawable/ic_star_border"
android:contentDescription="Favorite"/>

<ImageView
android:id="@+id/ivCopy"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:layout_toStartOf="@id/ivFavorite"
android:layout_centerVertical="true"
android:layout_marginEnd="8dp"
android:src="@drawable/ic_copy"
android:contentDescription="Copy"/>
    </RelativeLayout>

<Button
android:id="@+id/btnRefresh"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Refresh Quote"
android:layout_below="@id/quoteBox"
android:layout_centerHorizontal="true"
android:layout_marginTop="20dp"/>

<Button
android:id="@+id/btnShare"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Share Quote"
android:layout_below="@id/btnRefresh"
android:layout_centerHorizontal="true"
android:layout_marginTop="20dp"/>

<TextView
android:id="@+id/tvFavoritesTitle"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Favorite Quotes"
android:textSize="20sp"
android:textColor="#000000"
    android:layout_below="@id/btnShare"
    android:layout_centerHorizontal="true"
    android:layout_marginTop="30dp"/>

<ListView
android:id="@+id/listViewFavorites"
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:layout_below="@id/tvFavoritesTitle"
android:layout_marginTop="10dp"
android:padding="16dp"
android:background="#D3D3D3"
    />

<TextView
android:id="@+id/tvHelp"
android:layout_width="wrap_content"
android:layout_height="wrap_content"
android:text="Help"
android:textColor="#000000"
    android:textStyle="bold"
    android:textSize="18sp"
    android:layout_alignParentBottom="true"
    android:layout_alignParentEnd="true"
    android:padding="16dp"
    android:contentDescription="Help"/>
    </RelativeLayout>
